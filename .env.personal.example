# ===============================================================
# Personal Telegram Code Assistant Configuration
# ===============================================================

# REQUIRED: Your Telegram Bot Token
# Get this from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# REQUIRED: Your LLM API Key (choose one)
ANTHROPIC_API_KEY=your_claude_api_key_here
# OR
# OPENAI_API_KEY=your_openai_api_key_here
# OR
# MOONSHOT_API_KEY=your_kimi_k2_api_key_here

# OPTIONAL: GitHub Personal Access Token
# For cloning repositories via HTTPS
# Get from: GitHub Settings → Developer settings → Personal access tokens
GITHUB_TOKEN=github_pat_your_token_here

# OPTIONAL: Workspace Configuration
DEFAULT_WORKSPACE=/tmp/telegram_bot_workspaces
LOG_LEVEL=INFO

# OPTIONAL: Access Control (leave empty to allow all users)
ALLOWED_USERS=
ADMIN_USERS=